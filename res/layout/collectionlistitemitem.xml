<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tlcollectionlistitemitem"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- 2 columns -->

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <RadioGroup
            android:id="@+id/collectionlistitemitem_rgSelect"
            android:layout_width="30dip"
            android:layout_height="wrap_content"
            android:layout_weight="5" >

            <RadioButton
                android:id="@+id/collectionlistitemitem_rbSelect"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="select" />
        </RadioGroup>

        <Button
            android:id="@+id/collectionlistitemitem_btSelect"
            android:text="select" />
    </TableRow>

    <!-- edittext span 2 column -->

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <RadioGroup
            android:id="@+id/collectionlistitemitem_rgManual"
            android:layout_width="30dip"
            android:layout_height="wrap_content"
            android:layout_weight="5" >

            <RadioButton
                android:id="@+id/collectionlistitemitem_rbManual"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="manual" />
        </RadioGroup>

        <EditText
            android:id="@+id/collectionlistitemitem_etManual"
            android:text="" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <Button
            android:id="@+id/collectionlistitemitem_btOk"
            android:layout_width="wrap_content"
            android:text="OK" />
        <Button
            android:id="@+id/collectionlistitemitem_btCancel"
            android:layout_width="wrap_content"
            android:text="CANCEL" />
    </TableRow>

</TableLayout>