<!-- not used yet -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llCollectionlistitem"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#81BEF7"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/llCollectionlistitem_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#2B60DE"
        android:gravity="left|top"
        android:height="32dp"
        android:orientation="horizontal" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/llCollectionlistitem_1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:gravity="left|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/collectionlistitem_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="Edit Collections" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/buttonlayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:gravity="right"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="24dp"
                android:text="ADD"
                android:width="60dp" >
            </Button>

            <Button
                android:id="@+id/btDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="24dp"
                android:text="DELETE"
                android:width="80dp" >
            </Button>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/collectionlistitem_lv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/buttonlayout4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="right"
        android:orientation="vertical" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/buttonlayout5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#81BEF7"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:height="24dp"
                android:text="SAVE"
                android:width="80dp" >
            </Button>

            <Button
                android:id="@+id/btCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:height="24dp"
                android:text="CANCEL"
                android:width="80dp" >
            </Button>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>